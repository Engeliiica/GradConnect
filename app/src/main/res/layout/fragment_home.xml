<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F9F6"
    android:padding="24dp">

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GradConnect"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#0F5962"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Enlarged Link Emoji -->
    <TextView
        android:id="@+id/logoEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”—"
        android:textSize="80sp"
        android:textColor="#1FAB89"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to GradConnect"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0F5962"
        app:layout_constraintTop_toBottomOf="@id/logoEmoji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"/>

    <!-- Slogan -->
    <TextView
        android:id="@+id/appSlogan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connecting tomorrow's talent with today's opportunities"
        android:textSize="16sp"
        android:textColor="#4DD0E1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Sign Up Button -->

    <!-- Sign In Button -->
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4DB6AC"
        android:paddingVertical="14dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appSlogan" />

    <Button
        android:id="@+id/signInButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:paddingVertical="14dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#4DB6AC"
        app:cornerRadius="50dp"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
